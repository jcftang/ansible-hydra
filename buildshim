#!/bin/bash

case $1 in
patch)
    ;;
install_deps)
    git submodule init
    git submodule update
    ;;
configure)
    if [[ -s "$HOME/hosts.buildbot" ]] ; then
      cp $HOME/hosts.buildbot hosts.buildbot
    else
      printf "Can't upload and deploy, can't find hosts.buildbot file"
      exit 1
    fi
    ;;
compile)
    ansible-playbook -i hosts.buildbot site.yml
    ;;
check)
    ;;
package)
    ;;
upload)
    ;;
compile_extra)
    ;;
uninstall_deps)
    ;;
esac
